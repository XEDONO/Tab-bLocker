{
  "manifest_version": 2,
  "name": "Tab Blocker",
  "version": "1.0",
  "description": "A Chrome extension to block new tabs",
  "icons": {
    "16": "green-sphere.png",
    "48": "green-sphere.png",
    "128": "green-sphere.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "green-sphere.png",
      "48": "green-sphere.png"
    },
    "default_title": "Tab Blocker"
  },
  "permissions": [
    "tabs"
  ]
}
